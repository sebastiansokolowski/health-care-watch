<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

    <PreferenceCategory android:title="Nighttime">

        <SwitchPreference
            android:key="nighttime_enabled"
            android:title="Nighttime" />

        <com.selastiansokolowski.healthcarewatch.view.preference.TimePickerPreference
            android:defaultValue="00:00"
            android:dependency="nighttime_enabled"
            android:key="nighttime_start"
            android:title="Start" />

        <com.selastiansokolowski.healthcarewatch.view.preference.TimePickerPreference
            android:defaultValue="06:00"
            android:dependency="nighttime_enabled"
            android:key="nighttime_stop"
            android:title="Stop" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_watch_category">

        <com.selastiansokolowski.healthcarewatch.view.preference.SamplingSeekBarPreference
            android:key="sampling_us"
            android:title="@string/settings_sampling_time" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_health_care_events_category">
        <com.selastiansokolowski.healthcarewatch.view.preference.CustomMultiSelectListPreference
            android:key="health_care_events"
            android:title="@string/settings_select_events" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_alert_notification_category">

        <SwitchPreference
            android:defaultValue="false"
            android:key="sms_notification_enabled"
            android:title="@string/settings_sms_notification" />

        <com.selastiansokolowski.healthcarewatch.view.preference.CustomMultiSelectListPreference
            android:dependency="sms_notification_enabled"
            android:key="contacts"
            android:title="@string/settings_select_contacts" />

        <SwitchPreference
            android:key="android_notification_enabled"
            android:title="@string/settings_android_notification_title" />

    </PreferenceCategory>

</PreferenceScreen>