<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

    <PreferenceCategory android:title="@string/settings_watch_category">

        <com.sebastiansokolowski.healthcarewatch.view.preference.SamplingSeekBarPreference
            android:key="sampling_us"
            android:summary="Wartość po której zdarzenie zostanie rozpoznane jako upadek."
            android:title="@string/settings_sampling_time" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/health_care_event_fall_title">

        <com.sebastiansokolowski.healthcarewatch.view.preference.FallThresholdSeekBarPreference
            android:key="fall_threshold"
            android:summary="Wartość po której zdarzenie zostanie rozpoznane jako upadek."
            android:title="@string/settings_fall_threshold" />

        <SwitchPreference
            android:defaultValue="true"
            android:summary="Zdarzenie zostanie wykryte wyłącznie w ruchu."
            android:key="fall_step_detector"
            android:title="@string/settings_fall_step_detector" />
    </PreferenceCategory>
</PreferenceScreen>